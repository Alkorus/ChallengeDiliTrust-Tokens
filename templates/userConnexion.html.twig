{% extends 'base.html.twig' %}
{% block principal %}

    <h2>Connexion d'un utilisateur</h2>

    {% if app.session.flashbag.get('notice') is defined %}
        {% for notice in app.session.flashbag.get('notice') %}
            <h4 style="color:red;">{{notice}}</h4>
        {% endfor %}
    {% endif %}

    {{form_start(formUser)}}
        <table>
        <tr>
            <td>{{ form_label(formUser.courriel, "Courriel") }}</td>
            <td>{{ form_widget(formUser.courriel) }}</td>
            <td style="color:red;">{{ form_errors(formUser.courriel) }}</td>
        </tr>
        <tr>
            <td>Mot de passe</td>
            <td><input type="password" name="pswd"/></td>
        </tr>
        <tr>
            <td><input type="submit" name='valider' value='Valider' class='btn btn-info'/></td>
        </tr>
        </table>

    {{form_end(formUser, {'render_rest': false})}}

{% endblock %}